@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active">
            <img src="~/Content/Images/5318.jpg" alt="Desafios" style="width:100%;">
        </div>
        <div class="item">
            <img src="~/Content/Images/Bungee-jump.jpg" alt="Bungee jump" style="width:100%;">
        </div>
        <div class="item">
            <img src="~/Content/Images/Apl.jpg" alt="Alpinismo" style="width:100%;">
        </div>
        <div class="item">
            <img src="~/Content/Images/slackline.jpg" alt="Slackline" style="width:100%;">
        </div>
        <div class="item">
            <img src="~/Content/Images/Paraquedismo.jpg" alt="Paraquedismo" style="width:100%;">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row col-md-12">
    <div class="col-md-4">
        <h2>Acessórios</h2>
        <p>
            Acessórios para você que gosta de praticar todo o tipo de esporte
        </p>
        <p><a class="btn btn-danger" href="https://localhost:44393/Produto/Acessorio">Veja mais &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Roupas</h2>
        <p>Prepare-se para vestir as melhores roupas para praticar esportes radicais.</p>
        <p><a class="btn btn-danger" href="https://localhost:44393/Produto/Roupas">Veja mais &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2>Outros Produtos</h2>
        <p>Compre bicicleta, equipamentos de alpinismo, equipamentos de slackline, entre outros...</p>
        <p><a class="btn btn-danger" href="https://go.microsoft.com/fwlink/?LinkId=301867">Veja mais &raquo;</a></p>
    </div>
</div>